{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:/temp/wiser_api_logs/api/log.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Console"
      }
    ],
    "Enrich": [
      "FromLogContext"
    ]
  },
  "GCL": {
    "Environment": "live", //can be development, test, or live
    "SecretsBaseDirectory": "C:\\WiserSecrets\\API\\"
  },
  "Api": {
    "BaseUrl": "https://api.wiser3.nl",
    "MaximumLoginAttemptsForUsers": 25,
    "MaximumLoginAttemptsForAdmins": 25,
    "JsonPropertiesToAlwaysEncrypt": [ "dataSelectorId", "queryId", "countQueryId", "emailDataQueryId", "preRequestQueryId", "resourcesQueryId", "postRequestQueryId", "contentItemId", "initialItemId", "newItemParentId", "linkItemsQueryId", "linkItemsCountQueryId", "executeQueryAfterEmail", "parentId", "deleteItemQueryId", "defaultValueQueryId" ],
    "MainSubDomain": "main",
    "UseTerserForTemplateScriptMinification": false
  },
  "AllowedHosts": "*"
}